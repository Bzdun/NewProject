    ViewBag.Title = "Index";
}

<h2>Tour - Index</h2>

<p>
    @if (ViewBag.write)
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
         <th>
            Category
        </th>
        <th>
            Sequence
        </th>
       <th>
