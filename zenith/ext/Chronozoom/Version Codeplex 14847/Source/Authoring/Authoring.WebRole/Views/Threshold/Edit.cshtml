@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Threshold</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Threshold1)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Threshold1)
            @Html.ValidationMessageFor(model => model.Threshold1)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ThresholdDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ThresholdDate)
