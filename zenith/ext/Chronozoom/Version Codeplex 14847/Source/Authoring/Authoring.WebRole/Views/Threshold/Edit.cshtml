            @Html.EditorFor(model => model.ThresholdYear)
            @Html.ValidationMessageFor(model => model.ThresholdYear)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ThresholdTimeUnit)
        </div>
